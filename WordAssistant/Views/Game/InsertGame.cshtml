@model Game
@{
    ViewData["Title"] = "Log New Game";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="container">
    @using (Html.BeginForm("InsertGameToDatabase", "Game", "Post"))
    {
        <div class="row mb-3">
            <div class="col d-flex justify-content-between">
                <h4 class="pt-2">New Game</h4>
            </div>
            <div class="col d-flex justify-content-end">
                <div>
                    <input type="submit" value="Submit" class="btn btn-info shadow-sm" />
                </div>
                <div class="mx-2">
                    <a href="/Game/Index" class="btn btn-secondary shadow-sm">Cancel</a>
                </div>
            </div>
        </div>

        <div class="row mb-3 mx-3 justify-content-center">
            <h5>Enter your Wordle answer and game details below.</h5>
        </div>

        <div class="container">

            <div class="row justify-content-md-center">

                <div class="col col-lg-2"></div>

                <div class="col-md-auto">

                    <div class="row">
                        <div class="col d-flex align-items-start">
                            <h5>Answer:  </h5>
                        </div>
                        <div class="col">
                            <input asp-for="WordName" class="form-control" placeholder="Answer" maxlength="5">                
                            <span asp-validation-for="WordName"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col d-flex align-items-end">
                            <h5>Outcome:  </h5>
                        </div>
                        <div class="col">
                            <select class="form-control" name="WinLoss" aria-label=".form-select-lg">
                                <option selected>Win/Loss</option>
                                <option value=true>Win</option>
                                <option value=false>Loss</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col d-flex align-items-end">
                            <h5>Game Date:  </h5>
                        </div>
                        <div class="col">
                            <input type="date" name="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                </div>

                <div class="col col-lg-2"></div>
            </div>
        </div>
    }
</div>