@model Game
@{
    ViewData["Title"] = "Edit Game";
}
				
@*<h2>Edit Game Info for @Model.GameID</h2>*@
<div class="container">			
    @using (Html.BeginForm("UpdateGameToDatabase", "Game", "Post"))
    {
        <div class="row mb-3" >
                <div class="col d-flex justify-content-between">
                    <h4 class="pt-2">Edit Game</h4>
                </div>
                <div class="col d-flex justify-content-end">
                    <div>
                        <input type="submit" value="Update" class="btn btn-info" />
                    </div>
                    <div class="mx-2">
                        <a href="/Game/ViewGame/@Model.GameID" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>

        <div class="container">

            <div class="row justify-content-md-center">

                <div class="col col-lg-2"></div>

                <div class="col-md-auto">

                    <div class="row">
                        <div class="col d-flex align-items-end">
                            <h5>Answer:  </h5>
                        </div>
                        <div class="col">
                            <input asp-for="GameID" type="hidden" value="@Model.GameID" />
	                        <input type="number" name="WordID" class="form-control" value="@Model.WordID" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col d-flex align-items-end">
                            <h5>Outcome:  </h5>
                        </div>
                        <div class="col">
                            <select class="form-control" name="WinLoss" aria-label=".form-select-lg">
                                <option selected>Win/Loss</option>
                                <option value=true>Win</option>
                                <option value=false>Loss</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col d-flex align-items-end">
                            <h5>Game Date:  </h5>
                        </div>
                        <div class="col">
                            <input type="date" name="Date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                </div>

                <div class="col col-lg-2"></div>

              </div>
                
            </div>



