@model Game
				
<h3>@Model.WordID Information</h3>
				
<table class="table">
    <tr>
        <th>Word ID</th>
        <th>WinLoss</th>
        <th>Date</th>
    </tr>
    <tr>
        <td>@Model.WordID</td>
        <td>@Model.WinLoss</td>
        <td>@Model.Date</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Game/UpdateGame/@Model.GameID">Update this Game</a>
</div>

<div style="display: block">
@using (Html.BeginForm("DeleteGame", "Game", "Post"))
    {
        <input type="hidden" asp-for="GameID" value="@Model.GameID" />
        <input type="submit" onclick="return confirm('Are you sure you want to delete this game?')" value="Delete this game" />
    }
</div>
