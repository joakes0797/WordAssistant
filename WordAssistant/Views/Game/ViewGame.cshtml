<table class="table table-dark text-white mt-4">
    <thead>
        <tr>
            <th>Word ID</th>
            <th>Win/Loss</th>
            <th>Date of Game</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.WordID</td>
            <td>@Model.WinLoss</td>
            <td>@Model.Date.ToShortDateString()</td>
        </tr>
    </tbody>
</table>