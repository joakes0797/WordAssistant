@model Game
@{
    ViewData["Title"] = "Game Details";
}
				
<h3>Game Details for @Model.WordID</h3>
				
<table class="table text-white">
    <tr>
        <th>Word ID</th>
        <th>Win/Loss</th>
        <th>Date of Game</th>
    </tr>
    <tr>
        <td>@Model.WordID</td>
        <td>@Model.WinLoss</td>
        <td>@Model.Date.ToShortDateString()</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Game/UpdateGame/@Model.GameID">Edit this Game</a>
</div>

<div style="display: block">
@using (Html.BeginForm("DeleteGame", "Game", "Post"))
    {
        <input type="hidden" asp-for="GameID" value="@Model.GameID" />
        <input type="submit" onclick="return confirm('Are you sure you want to delete this game?')" value="Delete this game" />
    }
</div>
